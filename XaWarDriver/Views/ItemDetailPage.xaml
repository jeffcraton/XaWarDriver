<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XaWarDriver.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="SSID:" FontSize="Medium" />
        <Label Text="{Binding ssid}" FontSize="Small"/>
        <Label Text="Network name:" FontSize="Medium" />
        <Label Text="{Binding networkname}" FontSize="Small"/>
        <Label Text="Open:" FontSize="Medium" />
        <Label Text="{Binding open}" FontSize="Small"/>
        <Label Text="Crypto:" FontSize="Medium" />
        <Label Text="{Binding crypto}" FontSize="Small"/>
        <Label Text="Frequency:" FontSize="Medium" />
        <Label Text="{Binding frequency}" FontSize="Small"/>        
    </StackLayout>
    
</ContentPage>