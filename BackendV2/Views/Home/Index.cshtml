@{
    ViewData["Title"] = "Google Maps";
}

<style>
    /* Set the size of the div element that contains the map */
    #map {
        height: 400px;
        /* The height is 400 pixels */
        width: 100%;
        /* The width is the width of the web page */
    }
</style>

<div class="text-center">
    <h1 class="display-4">Mapping application</h1>
    <p>Show google mps</p>
    <!--The div element for the map -->
    <div id="map"></div>

    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDY-c0m4Rs43wVXBGqAOnZ72xKX1Ptxgbw&callback=initMap&libraries=&v=weekly"
            async></script>
</div>

<script type="text/javascript">
    // Initialize and add the map
    function initMap() {
        // The location of Uluru
        const uluru = { lat: 34.02433, lng: -84.64351};
        // The map, centered at Uluru
        const map = new google.maps.Map(document.getElementById("map"), {
            zoom: 4,
            center: uluru,
        });
        // The marker, positioned at Uluru
        const marker = new google.maps.Marker({
            position: uluru,
            map: map,
        });
    }
</script>